extends layout
block content
  .w3-card-4
    header.w3-container.w3-blue-grey
      h1 
        b  #{ent.id}
  .w3-card-4.w3-margin-top
    .w3-large.w3-padding-small
        p <b>Data:</b> 
          =ent.data
        p <b>Numero:</b> 
          =ent.numero
        p <b>tipo:</b> 
          =ent.tipo
        p <b>Sumario:</b> 
          =ent.sumario
        p <b>Estado:</b> 
          =ent.estado
        p <b>Fonte:</b> 
          =ent.fonte
    .w3-card-4
    h2.w3-center Lista de Entidades 
    table.w3-table-all
        tr
            th.w3-center Link
        each e in ent.entidades
            tr
                td.w3-center 
                    a(href="/entidades/" + e)= e.sigla

    
  
  footer.w3-card-4.w3-blue-grey
      a.w3-large(class='w3-button' href='../') <b>Voltar</b>